<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#424242"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="match_parent"
        android:padding="30dp"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        android:background="#BF0091EA"
        android:layout_height="wrap_content"
        android:text="Jerky Match"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_gravity="center_horizontal">

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_Basic"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:layout_margin="15dp"
            android:onClick="startBasic"
            fancy:fb_textSize="25dp"
            fancy:fb_text="BASIC"
            fancy:fb_ghost="true"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_textColor="#9bd823"
            fancy:fb_borderColor="#9bd823"
            fancy:fb_borderWidth="5dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_Advanced"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:layout_margin="15dp"
            android:onClick="startAdvanced"
            fancy:fb_textSize="25dp"

            fancy:fb_text="ADVANCED"
            fancy:fb_ghost="true"
            fancy:fb_focusColor="#9bd823"
            fancy:fb_textColor="#9bd823"
            fancy:fb_borderColor="#9bd823"
            fancy:fb_borderWidth="5dp" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_Catalog"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            android:layout_margin="15dp"
            android:onClick="startCatalog"
            fancy:fb_textSize="25dp"
            fancy:fb_text="View Catalog"
            fancy:fb_ghost="true"
            fancy:fb_focusColor="#FFFFFF"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="5dp" />
    </LinearLayout>

</LinearLayout>
